// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique
  password String
  role     Role

  @@map("users")
}

enum Role {
  ADMIN
  MANAGER
}

model Item {
  id                   String   @id @default(uuid())
  name                 String
  inventarization_code String   @unique
  photo_url            String?
  upload_date          DateTime @default(now())

  @@map("items")
}
